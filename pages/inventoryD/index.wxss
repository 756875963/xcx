page{
background:#55d0eb;

}
.sales{
 width:98%;
	border-radius:10px;
	overflow:hidden;
	margin:2% 1%;

}
.inventory{
 display:flex;
 flex-wrap:wrap;

 width:100%;
 height:80%;
 bottom:0px;
 

 align-content:flex-start;
 }
 .inventory-1>view:not(:last-child){
  padding:2px 10px 0px 10px;
 }
  .inventory-1>view:first-child{
  margin-top:10px;
  }
.inventory-1>view:nth-child(2){
   overflow:hidden; 
	text-overflow:ellipsis;
	display:-webkit-box; 
	-webkit-box-orient:vertical;
	-webkit-line-clamp:1; 
	line-height:25px;
	
 }
 
.inventory-2 .inventory-2-1:nth-child(odd){background:#F4F4F4;color:#333;}
.inventory-2 .inventory-2-1:nth-child(even){color:#d51d20;}
.inventory-1{
	color:white;
	font-size:14px;
	width:100%;
	z-index:9;
    background:-webkit-linear-gradient(left, #19b7f9, #6acbf4);
    background:-o-linear-gradient(left, #19b7f9, #6acbf4);
    background:-moz-linear-gradient(left, #19b7f9, #6acbf4);
    background:linear-gradient(left, #19b7f9, #6acbf4);
 }

 
  .inventory-1>view:last-child image{
  width:25px;
  height:25px;
  
  }
  .inventory-2{
  background:red;
  overflow:scroll;
  width:100%;
  position:relative;
 
  
  }
  .inventory-2-1{
   
   padding:10px 0;
   
   background:white;
   display:flex;
   justify-content:space-between;
   align-items:center;
   font-size:14px;
  }
  .inventory-2-1 >view{
   width:100%;
   text-align:center;
  }
  
  .menu-i{
   width:100%;
  background:white;
  color:#333;

   padding:10px 0px;
   
  }
 .bar{
   display:flex;
   width:100%;
   justify-content:flex-start;
 }
 .bar>view{
   display:flex;
   width:50%;
   justify-content:center;
   border-top-left-radius:10px;
   border-top-right-radius:10px;
   background:#ace7f5;
   font-size:16px;
   padding:10px 0;
   color:#333;
 }
