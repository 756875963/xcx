page{
  background:#55d0eb;
}
.swiper-tab{
    width: 100%;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
    background:#ace7f5;
    position:fixed;
    top:0;
    z-index:9;
}
.swiper-tab-item{

    width: 30%; 
    color:#555;
}
.swiper_li{
   margin-top:88rpx;
   
}
.active{
    color:white;
    background:#19b7f9;
    box-shadow:0px 0px 10px 1px #0686bc inset;
}
swiper{
  text-align: center;
}


/*统计li_css*/
.xcx-main{
  display:flex;
  width:100%;
  flex-wrap:wrap;
  position:relative;
  align-content:flex-start;
  height:100%;
  z-index:8;
}
.menu-li{
  display:flex;
  width:98%;
  flex-wrap:wrap;
  background:white;
  margin:1% 1% 0;
  padding:5px;
  border-radius:5px;
}
.xcx-main view.menu-li:last-child{
  
}
.li-1{
  display:flex;
  width:100%;
}
.li-1 .li-1-1{
  width:80%;
  display:flex;
  flex-wrap:wrap;
  color:#333;
  font-size:14px;
  background:#fffbfb;
  border-top-left-radius:5px;
}
.li-1 .li-1-1 >view{
  width:100%;
  display:flex;
  padding:5px 5px;
}
.li-1 .li-1-2{
  display:flex;
  flex-grow:1;
  align-items:center;
  justify-content:center;
  background:#19b7f9;
  color:white;
  font-size:15px;
  border-top-right-radius:5px;
}

.li-1 .li-1-2:active{
    color:white;
    background:#19b7f9;
    box-shadow:0px 0px 10px 1px #0686bc inset;
}


.li-2{
  display:flex;
  flex-wrap:nowrap;
  font-size:12px;
  background:#EEEEEE;
  width:100%;
  justify-content:space-between;
  padding:5px 2px;
  border-bottom-right-radius:5px;
  border-bottom-left-radius:5px;
}
.li-2 >view >font{
  color:#d51d20;
  font-weight:700;
}
.li-2 >view {
  margin-left:5px;
}
.error{
 width:98%;
 margin-left:1%;
 margin-top:1%;
 height:90px;
 background:white;
 border-radius:10px;
 display:none;
 align-items:center;
 justify-content:center;
}
.errors{
  display:flex;
}
.error>image{
  width:30px;
  height:30px;
}
.error>view{
 font-size:14px;
}
.menu-li-footer{
  position:absolute;
  width:100%;
  height:40px;
  background:#ace7f5;
  display:flex;
  align-items:center;
  justify-content:center;
  bottom:0px;
  left:0px;
  right:0px;
  z-index:9;
  color:#555;
}
.menu-li-footer font{
 color:#d51d20;
 font-weight:700;
}
/*分页*/
.yeti{
  display:flex;
  width:100%;
  height:30px;
  color:#333;
  justify-content:center;
  align-items:center;
  font-size:12px;
}
.swiper-tab-item{
  position:relative;
}
.clickTabas{
  position:absolute;
  display:flex;
  bottom:-10px;
  width:100%;
  justify-content:flex-start;
  align-items:center;
}
.clickTabas>view{
background:-webkit-radial-gradient(center center,#ee7c7e, #d51d20);
font-size:13px;
border-radius:14px;
height:19px;
line-height:19px;
padding:2px 7px;
color:white;
box-shadow:1px 1px 2px 1px rgba(0,0,0,.5);
}
